<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#26A69A">
    <!-- the toolbar-->
    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar">
    </include>

    <!-- The image for the question-->
    <ImageView
        android:id="@+id/imgPicture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tool_bar"
        android:layout_marginTop="25sp"
        android:src="#FFF000" />

    <!-- The question itself-->
    <TextView
        android:id="@+id/lblQuestion"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/imgPicture"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_margin="35dp"
        android:text="This is where the questions are going to appear!"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <!-- button for answer-->
    <Button
        android:id="@+id/btnRight"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Option 1"
        android:layout_margin="10dp"
        android:layout_below="@+id/lblQuestion"
        android:layout_alignParentLeft="true"
        android:background="#00796B"
        android:textColor="#FFFFFF"/>

    <!-- button for answer-->
    <Button
        android:id="@+id/btnLeft"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Option 2"
        android:layout_below="@+id/lblQuestion"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="#00796B"
        android:textColor="#FFFFFF"
        />

    <!-- text to keep current score-->
    <TextView
        android:id="@+id/txtScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textColor="#FFFFFF"
        android:layout_below="@id/btnRight"
        android:layout_marginTop="35dp"
        android:padding="10sp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
