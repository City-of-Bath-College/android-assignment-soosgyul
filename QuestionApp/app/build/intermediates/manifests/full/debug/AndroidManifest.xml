<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="questionapp.gyula.gs.com.questionapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Questionaire"
        android:theme="@style/AppTheme" >

        <!-- Main activity as the activity with the questions -->
        <activity
            android:name="questionapp.gyula.gs.com.questionapp.MainActivity"
            android:label="Questions" >
        </activity>
        <!-- Activity for the profile card -->
        <activity
            android:name="questionapp.gyula.gs.com.questionapp.ProfileCard"
            android:label="About the author" >
        </activity>
        <!-- The launcher screen, main screen of the app -->
        <activity android:name="questionapp.gyula.gs.com.questionapp.IntroductionActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Displaying highscores -->
        <activity
            android:name="questionapp.gyula.gs.com.questionapp.HighScoreActivity"
            android:label="High scores" >
        </activity>
    </application>

</manifest>